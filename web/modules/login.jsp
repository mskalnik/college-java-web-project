<div id="login" class="modal">
    <div class="modal-content">
        <h4>Login</h4>
        <div class="row">
            <form class="col s12" action="login" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        <input id="email" name="email"  type="email" maxlength="50" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        <input id="password" name="password" type="password" maxlength="50" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
                    <button class="btn btn-large waves-effect waves-light right" type="submit" name="action">LOGIN
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>